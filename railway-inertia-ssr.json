{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/standalone/Dockerfile",
    "watchPatterns": [
      "resources/js/**",
      "resources/css/**",
      "vite.config.ts",
      "docker/**"
    ]
  },
  "deploy": {
    "startCommand": "node bootstrap/ssr/ssr.mjs",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
