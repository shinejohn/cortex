{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "docker/standalone/Dockerfile",
        "watchPatterns": [
            "app/Http/Controllers/AlphaSite/**",
            "app/Http/Requests/AlphaSite/**",
            "app/Services/AlphaSite/**",
            "resources/js/Pages/AlphaSite/**",
            "routes/alphasite.php"
        ]
    },
    "deploy": {
        "startCommand": "php artisan migrate --force && php artisan config:cache && php artisan route:cache && php artisan serve --host=0.0.0.0 --port=$PORT",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300
    }
}