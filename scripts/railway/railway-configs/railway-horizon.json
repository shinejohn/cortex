{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/standalone/Dockerfile",
    "watchPatterns": [
      "config/horizon.php",
      "app/Jobs/**",
      "app/Listeners/**"
    ]
  },
  "deploy": {
    "startCommand": "php artisan horizon",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}