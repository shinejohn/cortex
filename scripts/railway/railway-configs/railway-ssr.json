{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/standalone/Dockerfile",
    "watchPatterns": [
      "resources/js/**",
      "resources/css/**",
      "package.json",
      "vite.config.js",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "startCommand": "node bootstrap/ssr/ssr.mjs",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120,
    "numReplicas": 2
  }
}