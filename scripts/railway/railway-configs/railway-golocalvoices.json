{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "nixpacks",
        "watchPatterns": [
            "app/Http/Controllers/LocalVoices/**",
            "app/Http/Requests/LocalVoices/**",
            "app/Services/LocalVoices/**",
            "resources/js/Pages/LocalVoices/**",
            "routes/local-voices.php"
        ]
    },
    "deploy": {
        "startCommand": "php artisan migrate --force && php artisan config:cache && php artisan route:cache && php artisan serve --host=0.0.0.0 --port=$PORT",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300
    }
}