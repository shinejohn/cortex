{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "watchPatterns": [
      "app/Console/Kernel.php",
      "app/Console/Commands/**",
      "routes/console.php"
    ]
  },
  "deploy": {
    "startCommand": "php artisan schedule:work",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
