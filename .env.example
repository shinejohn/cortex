# LARAVEL
APP_NAME=Makerkit
APP_ENV=production
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# TRANSLATIONS
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# DEBUG
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# LOGGING
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# AUTH
BCRYPT_ROUNDS=12
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# REALTIME
BROADCAST_CONNECTION=log

# WORKERS
QUEUE_CONNECTION=database

# CACHING
MEMCACHED_HOST=127.0.0.1
CACHE_STORE=database
# CACHE_PREFIX=
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# EMAILS
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# STORAGE
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# PUBLIC VARIABLES
VITE_APP_NAME="${APP_NAME}"

# GOOGLE MAPS
GOOGLE_MAPS_API_KEY=
VITE_GOOGLE_MAPS_API_KEY="${GOOGLE_MAPS_API_KEY}"

# GOOGLE ANALYTICS 4
# Each site has its own GA4 property for separate tracking
VITE_GA4_GOEVENTCITY_ID=
VITE_GA4_DAYNEWS_ID=
VITE_GA4_DOWNTOWNGUIDE_ID=

# MAKERKIT VARIABLES
# - WORKSPACE
WORKSPACES_ENABLED=true
WORKSPACES_CAN_CREATE_WORKSPACE=false

# - AUTH
MAGICLINK_ENABLED=true
PASSWORD_ENABLED=true

# - - SOCIAL AUTH
SOCIALITE_ENABLED=true
SOCIALITE_PROVIDERS=google # Seperate by commas, i.e. google, github

# Observation
SENTRY_ENABLED=false
SENTRY_LARAVEL_DSN=https://get-your-dsn@dsn.us.sentry.io/projectid
SENTRY_SEND_DEFAULT_PII=true
SENTRY_TRACES_SAMPLE_RATE=1.0

STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
STRIPE_MOCK_CONNECT=false

# DAY NEWS
DAY_NEWS_POST_PRICE=1000
DAY_NEWS_AD_PRICE_PER_DAY=500

# N8N INTEGRATION
# Generate a secure random key for N8N API authentication
# Example: openssl rand -base64 32
N8N_API_KEY=

# ADMIN
ADMIN_EMAILS=admin@example.com,superadmin@example.com

# MULTI-APP DOMAINS
# Configure domains for each application
# Local development uses .test domains, production uses actual domains
GOEVENTCITY_DOMAIN=goeventcity.test
DAYNEWS_DOMAIN=daynews.test
DOWNTOWNGUIDE_DOMAIN=downtownguide.test

MAXMIND_LICENSE_KEY=

# Location Testing (set to true for local development with fake IP)
LOCATION_TESTING=false

# NEWS WORKFLOW
# Phase Configuration
NEWS_WORKFLOW_BUSINESS_DISCOVERY_ENABLED=true
NEWS_WORKFLOW_NEWS_COLLECTION_ENABLED=true
NEWS_WORKFLOW_SHORTLISTING_ENABLED=true
NEWS_WORKFLOW_FACT_CHECKING_ENABLED=true
NEWS_WORKFLOW_FINAL_SELECTION_ENABLED=true
NEWS_WORKFLOW_ARTICLE_GENERATION_ENABLED=true
NEWS_WORKFLOW_PUBLISHING_ENABLED=true

# Publishing Settings (Hybrid Auto-Publish)
NEWS_WORKFLOW_AUTO_PUBLISH_THRESHOLD=85
NEWS_WORKFLOW_WORKSPACE_ID=
NEWS_WORKFLOW_AUTHOR_ID=

# AI Models (Per Phase Configuration)
NEWS_WORKFLOW_AI_MODEL_SCORING=openai/gpt-3.5-turbo
NEWS_WORKFLOW_AI_MODEL_OUTLINE=openai/gpt-4
NEWS_WORKFLOW_AI_MODEL_GENERATION=openai/gpt-4

# Thresholds
NEWS_WORKFLOW_SHORTLIST_COUNT=10
NEWS_WORKFLOW_FINAL_COUNT=5
NEWS_WORKFLOW_MIN_RELEVANCE_SCORE=60
NEWS_WORKFLOW_MIN_QUALITY_SCORE=75
NEWS_WORKFLOW_MIN_CONFIDENCE_SCORE=70

# External APIs
SERPAPI_KEY=
SCRAPINGBEE_API_KEY=

# Unsplash API (for article featured images)
# Get your API key at: https://unsplash.com/developers
UNSPLASH_ENABLED=true
UNSPLASH_ACCESS_KEY=

# Unsplash Image Storage
UNSPLASH_STORAGE_ENABLED=true
UNSPLASH_STORAGE_DISK=public  # Use 's3' in production

# SNS Notification Configuration
SNS_TOPIC_PREFIX=shine-notifications

# Web Push VAPID Keys (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:notifications@shine.com

# SMS Rate Limiting
SMS_DAILY_LIMIT_PER_USER=5
SMS_MONTHLY_SPEND_LIMIT=1000
