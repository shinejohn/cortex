{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/standalone/Dockerfile",
    "watchPatterns": [
      "app/Console/**",
      "config/**",
      "routes/console.php",
      "docker/**"
    ]
  },
  "deploy": {
    "startCommand": "php artisan schedule:work",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
